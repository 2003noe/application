<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:contentDescription="Image produit"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_product" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomates fraÃ®ches"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="500 FCFA/kg"
                android:textColor="@color/primary_green"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_decrease"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/gray_light"
                    android:contentDescription="Diminuer"
                    android:src="@drawable/ic_remove"
                    android:padding="6dp" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btn_increase"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/gray_light"
                    android:contentDescription="Augmenter"
                    android:src="@drawable/ic_add"
                    android:padding="6dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Supprimer"
            android:src="@drawable/ic_delete"
            android:tint="@color/error_red" />
    </LinearLayout>
</androidx.cardview.widget.CardView>